{
  "compilerOptions": {
    "rootDir": "src/",
    "outFile": "index.js",
    "target": "es5",
    "module": "amd",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2016"
    ],
    "types": [
      "jasmine"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}